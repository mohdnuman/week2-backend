<div>
    <%=course.name%>
    <br />
    <%=course.description%>
    
    <%for(lecture of course.lectures){%>
      <video width="320" height="240" controls>
      <source src="<%=lecture.video%>" type="video/ogg">
    </video>
      <%}%>
    

    <form action="/lecture/create" id="new-post-form" method="POST" enctype="multipart/form-data">
        <textarea
          name="name"
          cols="30"
          rows="1"
          placeholder="Name...."
          class="course-input"
        ></textarea>
        <input name="id" value="<%=course._id%>" hidden />
        <div style="height:0px;overflow:hidden">
        <input
          type="file"
          name="video"
          placeholder="uploaded video"
          class="input-field"
          id="fileInputVideo"
        />
      </div><img
          src="https://cdn-icons-png.flaticon.com/512/833/833281.png"
          style="height: 30px; width: 30px; display: block"
          class="image-icon"
          onclick="chooseFile();"
        />
      
      <input type="submit" value="Post" class="post-button" />
    </form>

</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
    function chooseFile() {
       $("#fileInputVideo").click();
    }
 </script>